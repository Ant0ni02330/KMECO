<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">


    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/kmeco"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:weightSum="5">
        <ImageView
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="60dp"
            android:background="@drawable/user2"
            android:layout_weight="1"
            android:layout_gravity="center">
        </ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ImageView>

        <ImageView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/chat">
        </ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ajustes">
        </ImageView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image00"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image01"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image10"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image11"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image20"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image21"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image30"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image31"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image40"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    app:srcCompat="@drawable/producto">
                </ImageView>

                <ImageView
                    android:id="@+id/image41"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    app:srcCompat="@drawable/producto">
                </ImageView>

            </GridLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>